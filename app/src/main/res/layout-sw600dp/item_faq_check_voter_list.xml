<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?attr/selectableItemBackground"
  android:orientation="vertical"
  android:padding="8dp">

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline45PercentVertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.45" />

  <ImageView
    android:id="@+id/ivCheckVoterListIcon"
    android:layout_width="0dp"
    android:layout_height="64dp"
    android:layout_marginEnd="16dp"
    android:src="@drawable/ic_check_voter_list"
    android:tint="@color/accent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintDimensionRatio="h,1:1"
    app:layout_constraintEnd_toStartOf="@id/guideline45PercentVertical"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    style="@style/TextLarge"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:gravity="start"
    android:text="@string/voter_list"
    app:layout_constrainedWidth="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/guideline45PercentVertical"
    app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
