<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/ivRejectBallot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toEndOf="@+id/tvRejectBallot"
    app:layout_constraintStart_toStartOf="@+id/tvRejectBallot"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_close_circle_24"
    app:tint="@color/text_error" />

  <TextView
    android:id="@+id/tvRejectBallot"
    style="@style/TextLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:text="@string/invalid_ballot"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ivRejectBallot" />

</androidx.constraintlayout.widget.ConstraintLayout>